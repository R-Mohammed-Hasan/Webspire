    <form action="" onsubmit="onsubmitHandler()">
        <div class="row m-5">
            <h1 class="heading">Login</h1>

            <div class="input-group my-3">
                <input class="form-control" type="text" title="Please enter more than 5 characters" pattern="[a-zA-Z ]{5,}" name="" onfocusout="loginButton()" required value="" id="userName" placeholder="User Name">
            </div>
            <div class="input-group my-3">
                <input class="form-control" id="password" type="password" title="Please enter more than 8 characters that include special characters like ., and numbers" pattern="(?=.*\d)(?=.*[A-Za-z]).(?=.*[.,\-_]).{8,}" name="password" onfocusout="loginButton()" required
                    value="" id="password" placeholder="Password">
                <img src="./../assets/images/showPassword.png" class="showPassword" onclick="showPassword(event)" alt="">
            </div>
            <button type="submit" class="btn btn-primary my-4 ms-5" disabled>Login</button>

            <div class="or">
                OR
            </div>
            <span>
                 <a href="./forgotPassword.html">Forgot password ?</a>
            </span>

        </div>
    </form>
