if ($(".pagination").length && $(".postsContainer").length) {
    $(window).scroll(function() {
        var url;
        url = $(".pagination .next_page").attr("href");
        if (
            url &&
            $(window).scrollTop() > $(document).height() - $(window).height() - 60
        ) {
            $(".pagination").html(
                '<img src="<%= asset_path "loading.gif" %>" alt="Loading..." title="Loading..." />'
            );
            return $.getScript(url);
        }
    });
    $(window).scroll();
}
