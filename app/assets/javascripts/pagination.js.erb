if ($(".pagination").length && $(".postsContainer").length) {
localStorage.setItem("loading","false");
    $(window).scroll(function() {
        var url;

        url = $(".pagination .next_page").attr("href");
        if (url!=undefined && $(window).scrollTop() > $(document).height() - $(window).height() - 60) {
            localStorage.setItem("loading","true");
            $.ajax({
                url: url,
                method: "get",
                }).then(function(res){
                    if(res){
                       $('.postsContainer').append(res);
                    }
                }).then( function () {
                        const post_contents = [...$(".post-content")]
                        console.log(post_contents);
                        console.log("initilized_Slick");
                        post_contents.forEach(post => {
                            const classList = post.classList
                            console.log(classList);
                            if(!classList.contains("slick-initialized")){
                                $(post).slick({
                                    infinite: false,
                                    arrows: true,
                                    speed: 400,
                                    slidesToShow: 1,
                                    slidesToScroll: 1,
                                    swipeToSlide: true,
                                    touchMove: true,
                                    edge: true,
                                    dots: true,
                            })
                        }
                    })
            } );
        }
        return;
    });
}
