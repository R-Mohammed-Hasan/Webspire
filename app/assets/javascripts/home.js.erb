function showComments(comments,users,current_user_id,user_images) {
  $(".post-comments").show(300);
  let output = "";

  if (comments.length == 0) {
    document.getElementsByClassName("comments-container")[0].innerHTML = `<h2 style="text-align:center;margin:5%" id="no-comments-tool-tip">Be the first to add comment to this post...ðŸ¤©</h2>`;
    return;
  }

  for(comment of comments){
    for(user of users){
        if(comment.user_id == user.id){
        let deleteIcon = `<a class="delete-comment" data-index="${comment.id}" onclick="deleteComment(event,${comment.id})" >
                                <img src="<%= asset_path 'delete-icon.jpg' %>" class='delete-comment-icon'   width='45%'>
                          </a>`;
            output += `<div class="comment-container">
                        <div class="comment-details">
                        <div class="commentor-profile">
                        <a href="/profile/${user.id}" target="_blank">
                            <img src="${user_images[user.id]}" alt="">
                        </a>
                        </div>
                        <p class="commentor"><a href="/profile/${user.id}">${user.user_name}</a></p>
                        <p class="commented-time">${comment.created_at.slice(0,10)}</p>
                        ${current_user_id == comment.user_id ? deleteIcon : ""}
                    </div>
                    <div class="comment">
                        ${comment.comment}
                    </div>
                </div>`
                }
         }
    }
    document.getElementsByClassName("comments-container")[0].innerHTML = output;
}

function hideComments() {
    $(".post-comments").hide(100);
}

function deleteComment(event,comment_id) {
    $(event.target.parentNode.parentNode.parentNode).hide(150);
    jQuery.ajax({
        type: "put",
        url: `http://localhost:3000/comment/delete/${comment_id}`,
        beforeSend: function(xhr) {
            xhr.setRequestHeader('X-CSRF-Token', $('meta[name="csrf-token"]').attr('content'))
        }
    });
}

